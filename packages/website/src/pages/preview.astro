---
import Doodles from '../components/Doodles.astro';
import Footer from '../components/Footer.astro';
import Frame from '../components/Frame.astro';
import Hero from '../components/Hero.astro';
import PaperSheet from '../components/PaperSheet.astro';
import Screenshot from '../components/Screenshot.astro';
import SocialProof from '../components/SocialProof.astro';
import Testimonials from '../components/Testimonials.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

import '../styles/global.css';

import testimonials from '../data/testimonials.json';

const title = 'Preview - Nuclear Music Player';
const description = 'Component preview page';
---

<BaseLayout title={title} description={description}>
  <Frame spacing="48px">
    <PaperSheet color="white" showGrid>
      <Doodles slot="doodles" variant="scattered" count={18} />
      <Hero version="v1.1.0">
        <Screenshot />
      </Hero>
    </PaperSheet>

    <PaperSheet color="cyan">
      <SocialProof />
    </PaperSheet>

    <PaperSheet color="default">
      <Doodles slot="doodles" variant="scattered" count={10} />
      <Testimonials testimonials={testimonials} />
    </PaperSheet>

    <PaperSheet color="default">
      <Footer />
    </PaperSheet>
  </Frame>
</BaseLayout>
