{
  "name": "@nuclearplayer/eslint-config",
  "version": "0.0.6",
  "description": "Shared ESLint and Prettier configuration for Nuclear",
  "type": "module",
  "main": "eslint.config.ts",
  "exports": {
    ".": "./eslint.config.ts",
    "./prettier": "./prettier.config.js"
  },
  "files": [
    "eslint.config.ts",
    "prettier.config.ts"
  ],
  "scripts": {
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-pattern node_modules",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-pattern node_modules --fix"
  },
  "peerDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.38.0"
  }
}
