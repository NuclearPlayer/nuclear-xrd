{
  "name": "@nuclear/plugin-sdk",
  "version": "1.0.0",
  "description": "Plugin SDK for Nuclear music player",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./dist/index.d.ts"
    }
  },
