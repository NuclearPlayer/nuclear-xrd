  "compilerOptions": {
    "outDir": ".",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false
