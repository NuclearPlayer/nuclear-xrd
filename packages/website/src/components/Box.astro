---
type Props = {
  variant?: 'primary' | 'secondary' | 'tertiary';
  shadow?: 'default' | 'none';
  class?: string;
};

const {
  variant = 'primary',
  shadow = 'default',
  class: className,
} = Astro.props;

const baseClasses = 'border-border text-foreground flex rounded-md border p-4';

const variantClasses = {
  primary: 'bg-primary',
  secondary: 'bg-background',
  tertiary: 'bg-background-secondary',
};

const shadowClasses = {
  default: 'shadow-shadow',
  none: 'shadow-none',
};
---

<div
  class:list={[baseClasses, variantClasses[variant], shadowClasses[shadow], className]}
>
  <slot />
</div>
