---
type Props = {
  src?: string;
  alt?: string;
};

const { src, alt = 'Nuclear Music Player' } = Astro.props;
---

<div
  class="border-border border bg-background rounded-md p-2 shadow-shadow"
>
  {
    src ? (
      <img
        src={src}
        alt={alt}
        class="w-full border-border border rounded-sm"
      />
    ) : (
      <div class="flex aspect-[4/3] items-center justify-center bg-zinc-900 border-border border rounded-sm">
        <span class="text-lg md:text-xl font-bold text-white uppercase tracking-widest">
          Player Screenshot
        </span>
      </div>
    )
  }
</div>
