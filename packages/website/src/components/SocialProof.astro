---
import { Star } from '@lucide/astro';

type FeaturedLink = {
  name: string;
  href: string;
};

type Props = {
  starCount?: string;
  featuredOn?: FeaturedLink[];
};

const {
  starCount = '17,000+',
  featuredOn = [
    { name: 'Reddit', href: '#' },
    { name: 'Hacker News', href: '#' },
    { name: 'DistroTube', href: '#' },
    { name: "It's FOSS", href: '#' },
    { name: 'OMG! Ubuntu!', href: '#' },
  ],
} = Astro.props;
---

<section class="text-center p-4">
  <div class="inline-flex items-center gap-2 mb-6">
    <Star class="size-5 fill-amber-300" />
    <span class="text-lg font-bold uppercase tracking-wide">
      {starCount} stars on GitHub
    </span>
    <Star class="size-5 fill-amber-300" />
  </div>

  <div
    class="flex flex-wrap justify-center items-center gap-x-6 gap-y-2 text-sm font-medium"
  >
    {
      featuredOn.map((link, index) => (
        <>
          <a
            href={link.href}
            class="hover:underline underline-offset-4 transition-colors"
          >
            {link.name}
          </a>
          {index < featuredOn.length - 1 && (
            <span class="text-foreground-secondary hidden sm:inline">â€¢</span>
          )}
        </>
      ))
    }
  </div>
</section>
