---
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    href: 'https://github.com/NuclearPlayer/nuclear-xrd',
    label: 'GitHub',
    icon: 'simple-icons:github',
  },
  {
    href: 'https://discord.gg/JqPjKxE',
    label: 'Discord',
    icon: 'simple-icons:discord',
  },
  {
    href: 'https://fosstodon.org/@nuclearplayer',
    label: 'Mastodon',
    icon: 'simple-icons:mastodon',
    rel: 'me',
  },
];
---

<footer class="border-t-4 border-foreground bg-background py-16">
  <div class="mx-auto max-w-6xl px-4">
    <div
      class="flex flex-col items-center gap-12 md:flex-row md:justify-between"
    >
      <div class="flex flex-col items-center md:items-start gap-4">
        <h2 class="font-heading text-4xl font-black uppercase tracking-tight">
          Nuclear
        </h2>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                class="flex h-12 w-12 items-center justify-center border-2 border-foreground bg-background text-foreground shadow-[4px_4px_0px_0px_var(--color-foreground)] transition-transform hover:-translate-y-1 hover:bg-primary hover:text-primary-foreground"
                aria-label={link.label}
                rel={link.rel}
              >
                <Icon name={link.icon} class="size-5" />
              </a>
            ))
          }
        </div>
      </div>

      <div class="text-center md:text-right">
        <p class="mb-2 text-lg font-bold">
          Nuclear was created by{' '}
          <a
            href="https://github.com/nukeop"
            class="bg-primary px-1 text-primary-foreground hover:bg-foreground hover:text-background transition-colors"
          >
            nukeop
          </a>
        </p>
        <p
          class="text-sm font-medium text-foreground-secondary uppercase tracking-widest"
        >
          &copy; {currentYear} Nuclear Music Player
        </p>
      </div>
    </div>
  </div>
</footer>
