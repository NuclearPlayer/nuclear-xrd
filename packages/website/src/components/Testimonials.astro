---
import TestimonialCard from './TestimonialCard.astro';

type Testimonial = {
  text: string;
  author: string;
  link?: string;
};

type Props = {
  testimonials: Testimonial[];
};

const { testimonials } = Astro.props;
---

<section class="mb-32">
  <div class="mb-16 border-b-4 border-foreground pb-4">
    <h2 class="font-heading text-5xl font-black uppercase md:text-7xl">
      Testimonials
    </h2>
  </div>

  <div class="grid gap-8 md:grid-cols-2">
    {testimonials.map((testimonial) => <TestimonialCard {...testimonial} />)}
  </div>
</section>
