---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  {
    href: 'https://github.com/NuclearPlayer/nuclear-xrd',
    label: 'GitHub',
    icon: 'simple-icons:github',
  },
  {
    href: 'https://discord.gg/JqPjKxE',
    label: 'Discord',
    icon: 'simple-icons:discord',
  },
  {
    href: 'https://fosstodon.org/@nuclearplayer',
    label: 'Mastodon',
    icon: 'simple-icons:mastodon',
    rel: 'me',
  },
];
---

<footer class="p-4">
  <div class="mx-auto max-w-6xl">
    <div
      class="flex flex-col items-center gap-12 md:flex-row md:justify-between"
    >
      <div class="flex flex-col items-center md:items-start gap-4">
        <h2 class="font-heading text-4xl font-black uppercase tracking-tight">
          Nuclear
        </h2>
        <div class="flex gap-3">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                class="flex size-10 items-center justify-center border-border border bg-background text-foreground rounded-md shadow-shadow transition-all hover:translate-x-shadow-x hover:translate-y-shadow-y hover:shadow-none hover:bg-primary hover:text-primary-foreground"
                aria-label={link.label}
                rel={link.rel}
              >
                <Icon name={link.icon} class="size-5" />
              </a>
            ))
          }
        </div>
      </div>

      <div class="text-center md:text-right">
        <p class="mb-2 text-lg font-bold">
          Nuclear was created by{' '}
          <a
            href="https://github.com/nukeop"
            class="bg-primary px-1 rounded-sm hover:bg-foreground hover:text-background transition-colors"
          >
            nukeop
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
