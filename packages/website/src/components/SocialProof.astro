---
import { Star } from '@lucide/astro';

type FeaturedLink = {
  name: string;
  href: string;
};

type Props = {
  starCount?: string;
  featuredOn?: FeaturedLink[];
  alsoSeenOn?: FeaturedLink[];
};

const {
  starCount = '17,000+',
  featuredOn = [
    { name: 'Reddit', href: '#' },
    { name: 'Hacker News', href: '#' },
    { name: 'DistroTube', href: '#' },
  ],
  alsoSeenOn = [
    { name: 'OMG! Ubuntu!', href: '#' },
    { name: 'FOSSMint', href: '#' },
    { name: 'Korben.info', href: '#' },
    { name: 'Softpedia', href: '#' },
    { name: "It's FOSS", href: '#' },
  ],
} = Astro.props;
---

<section class="mb-16 text-center">
  <div class="inline-flex items-center gap-2 mb-8">
    <Star class="size-5 text-primary" />
    <span class="text-lg font-bold uppercase tracking-wide">
      Loved by {starCount} people on GitHub
    </span>
  </div>

  <div class="mb-4">
    <span
      class="text-sm font-bold uppercase tracking-widest text-foreground-secondary"
    >
      Featured on
    </span>
  </div>

  <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mb-8">
    {
      featuredOn.map((link) => (
        <a
          href={link.href}
          class="text-xl md:text-2xl font-bold hover:text-primary transition-colors"
        >
          {link.name}
        </a>
      ))
    }
  </div>

  <div
    class="flex flex-wrap justify-center items-center gap-4 text-sm text-foreground-secondary"
  >
    {
      alsoSeenOn.map((link, index) => (
        <>
          <a href={link.href} class="hover:text-foreground transition-colors">
            {link.name}
          </a>
          {index < alsoSeenOn.length - 1 && <span>â€¢</span>}
        </>
      ))
    }
  </div>
</section>
