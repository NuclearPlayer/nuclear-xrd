{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "log:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/themes/**/*"
        },
        {
          "path": "$APPDATA/plugins"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$APPDATA/themes"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/themes/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/themes/**/*"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPDATA/plugins/**/*"
        }
      ]
    },
    "store:default"
  ]
}