---
type Props = {
  class?: string;
};

const { class: className = '' } = Astro.props;
---

<div class:list={['frame min-h-screen relative bg-primary', className]}>
  <div
    class="absolute inset-0 bg-paper-texture mix-blend-multiply pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <div class="relative z-10 flex flex-col gap-8 p-8">
    <slot />
  </div>
</div>
