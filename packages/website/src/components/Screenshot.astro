---
type Props = {
  src?: string;
  alt?: string;
};

const { src, alt = 'Nuclear Music Player' } = Astro.props;
---

<section class="mb-32">
  <div
    class="mx-auto max-w-5xl border-4 border-foreground bg-background p-2 shadow-[8px_8px_0px_0px_var(--color-foreground)]"
  >
    {
      src ? (
        <img src={src} alt={alt} class="w-full border-2 border-foreground" />
      ) : (
        <div class="flex h-96 md:h-[32rem] items-center justify-center bg-zinc-900 border-2 border-foreground">
          <span class="text-xl md:text-2xl font-bold text-white uppercase tracking-widest">
            Player Screenshot
          </span>
        </div>
      )
    }
  </div>
</section>
