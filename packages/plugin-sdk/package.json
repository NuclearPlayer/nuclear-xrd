    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.12",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.1.0",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
