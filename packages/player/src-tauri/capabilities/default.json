{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-write-text-file",
    "log:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/themes/**/*"
        },
        {
          "path": "$APPDATA/plugins"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/plugins"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$APPDATA/themes"
        },
        {
          "path": "$APPDATA/playlists"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/themes/*"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/themes/**/*"
        },
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPDATA/plugins/**/*"
        },
        {
          "path": "$APPDATA/plugins/.downloads"
        },
        {
          "path": "$APPDATA/plugins/.downloads/**/*"
        }
      ]
    },
    "store:default",
    "upload:default",
    "opener:default",
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APPLOG"
        },
        {
          "path": "$APPLOG/**"
        }
      ]
    }
  ]
}